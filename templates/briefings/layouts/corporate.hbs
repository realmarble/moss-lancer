<script>
    function generateStockListing() {
  // Generate a random stock name with 3-4 random letters
   randomStockName = generateRandomLetters(3);

  // Generate a random percentage change value between -5% and 5%
   randomPercentageChange = (Math.random() * 10 - 5).toFixed(2);

  // Determine if the stock value goes up or down
   isIncrease = randomPercentageChange > 0;
// Determine the color based on the direction (green for increase, red for decrease)
 textColor = isIncrease ? "green" : "red";
  // Create the stock listing string
   stockListing = `${randomStockName} <span style="color:${textColor}">${randomPercentageChange.replace("-", "")}%</span>`;

  

  // Return the stock listing and text color
  return stockListing;
}

// Function to generate a random string of specified length with random letters
function generateRandomLetters(length) {
   alphabet = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
  let randomString = '';
  for (let i = 0; i < length; i++) {
    randomString += alphabet.charAt(Math.floor(Math.random() * alphabet.length));
  }
  return randomString;
}

// Example usage:
function updatetickerElements() {
  // Find all elements with the class "ticker"
   tickerElements = document.getElementsByClassName("ticker");

  // Iterate through each element and update its text content and style
  Array.from(tickerElements).forEach(element => {
    element.innerHTML = generateStockListing()
  });
}
updatetickerElements()
</script>
